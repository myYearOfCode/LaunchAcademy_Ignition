<h1>new friend</h1>
<% if @errors %>
  <% @errors.each do |error| %>
    <div><%= error %></div>
  <% end %>
<% end %>

<form action="/friends/new" method="post">
  <input type="text" name="first_name" value="<%= @first_name %>" />
  <input type="text" name="last_name" value="<%= @last_name %>" />
  <input type="submit" id="Submit" name="Submit"/>
</form>
